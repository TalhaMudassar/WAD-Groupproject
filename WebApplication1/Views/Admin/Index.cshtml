@model IEnumerable<WebApplication1.Models.Products>

@{
    Layout = null;
    ViewBag.Title = "Products";
}
<link href="~/Content/adminindex.css" rel="stylesheet" />
<div class="admin-container">

    <div class="login-link">
        <p><a href="@Url.Action("Login", "Account")">Go to Login</a></p>
    </div>
    <div class="content-wrapper">
        <h2 class="page-title">Products</h2>
        <p>
            <a href="/Admin/AddProduct" class="btn btn-primary">Add New Product</a>
        </p>
        <div class="table-container">
            <table class="product-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@Url.Content(item.ImagePath)" alt="Product Image" class="product-image" />
                                }
                            </td>
                            <td class="action-buttons">
                                <a href="/Admin/EditProduct/@item.Id" class="btn btn-warning">Edit</a>
                                <a href="/Admin/DeleteProduct/@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<link rel="stylesheet" href="~/Content/AdminIndex.css" />
