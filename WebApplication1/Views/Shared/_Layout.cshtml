<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AestheticAttire</title>

    <!-- Link to Bootstrap & Custom Styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Login.css" rel="stylesheet" type="text/css" />

    <!-- Modernizr Script -->
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <style>
        /* Navbar Styling */
        .navbar {
            background: transparent;
            border: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px 0;
        }

        /* Logo Styling */
        .brand-logo {
            width: 300px;
            height: auto;
            position: absolute;
            top: 0px;
            left: 20px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">
                    <img src="~/Content/Images/AA-logo.png" alt="AestheticAttire Logo" class="brand-logo">
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Date/AestheticAttire Text Below Form -->
    <div id="AestheticAttire-bar">
        <p>&copy; @DateTime.Now.Year - Aesthetic Attire</p>
    </div>

    <!-- jQuery & Bootstrap Scripts -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
